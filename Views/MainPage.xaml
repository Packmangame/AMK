<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMK.Views.MainPage">

    <ScrollView Grid.Row="1">
        <CollectionView 
                        ItemsSource="{Binding NewsItems}"
                        SelectionMode="None"
                        EmptyView="Загрузка новостей...">

            <CollectionView.Header>
                <StackLayout Padding="15,10">
                    <Label Text="Последние новости"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333" />

                    <!-- Индикатор загрузки -->
                    <ActivityIndicator IsVisible="{Binding IsLoading}"
                                     IsRunning="{Binding IsLoading}"
                                     Color="#1E3A8A"
                                     HorizontalOptions="Center"
                                     Margin="0,10" />
                </StackLayout>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10,5"
                           Padding="15"
                           CornerRadius="10"
                           BackgroundColor="White"
                           BorderColor="#E0E0E0"
                           HasShadow="True">

                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="Auto,*"
                              ColumnSpacing="12">

                            <!-- Изображение новости -->
                            <Frame Grid.Row="0" 
                                   Grid.Column="0"
                                   Grid.RowSpan="2"
                                   CornerRadius="8"
                                   Padding="0"
                                   BackgroundColor="LightGray"
                                   HeightRequest="80"
                                   WidthRequest="80">

                                    <Image Aspect="AspectFill">
                                        <Image.Source>
                                            <UriImageSource 
                                                Uri="{Binding ImageUrl}"
                                                CacheValidity="1:00:00"
                                                CachingEnabled="True"
                                                />
                                        </Image.Source>
                                    </Image>
                                </Frame>

                            <!-- Заголовок новости -->
                            <Label Grid.Row="0" 
                                   Grid.Column="1"
                                   Text="{Binding Title}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{Binding ReadColor}"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2" />

                            <!-- Краткое описание -->
                            <Label Grid.Row="1" 
                                   Grid.Column="1"
                                   Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="#666666"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"
                                   Margin="0,5,0,0" />

                           
                           

                            <!-- Кнопка "Читать" -->
                            <Button Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Text="Читать"
                                    BackgroundColor="Yellow"
                                    TextColor="White"
                                    CornerRadius="20"
                                    Margin="0,10,0,0"
                                    Clicked="OnReadNewsClicked">

                                <Button.Triggers>
                                    <DataTrigger TargetType="Button"
                                                 Binding="{Binding Link}"
                                                 Value="{x:Null}">
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter Property="Text" Value="Ссылка недоступна" />
                                        <Setter Property="BackgroundColor" Value="LightGray" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.Footer>
                <!-- Кнопка "Загрузить еще" -->
                <Button Text="Загрузить еще"
                        BackgroundColor="Transparent"
                        TextColor="AliceBlue"
                        FontAttributes="Bold"
                        Margin="0,20"
                        IsVisible="{Binding HasMoreNews}"
                        Clicked="OnLoadMoreClicked" />
            </CollectionView.Footer>
        </CollectionView>
    </ScrollView>
   
</ContentPage>