<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMK.Views.EditCompanyNewsPage"
             Title="EditCompanyNewsPage">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="0">
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <Button Grid.Column="0" 
                        Text="Обновить" 
                        Command="{Binding LoadNewsCommand}" />

                <Button Grid.Column="1" 
                        Text="Добавить" 
                        Command="{Binding AddNewsCommand}" />

                <Button Grid.Column="2" 
                        Text="Редактировать" 
                        Command="{Binding EditNewsCommand}" 
                        IsEnabled="{Binding IsNewsSelected}"/>

                <Button Grid.Column="3" 
                        Text="Удалить" 
                        Command="{Binding DeleteNewsCommand}" 
                        IsEnabled="{Binding IsNewsSelected}"/>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>