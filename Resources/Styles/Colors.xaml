<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Brand palette (provided) -->
    <Color x:Key="BrandPrimary">#2767E9</Color>
    <Color x:Key="BrandPrimaryLight">#9AADF6</Color>
    <Color x:Key="BrandAccent">#EF6A3F</Color>

    <!-- Backgrounds (NO pure white / NO pure black for app background) -->
    <Color x:Key="AppBackground">#faeedd</Color>        <!-- off-white -->
    <Color x:Key="OffBlack">#0D0106</Color>             <!-- off-black -->

    <!-- Surfaces -->
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#141018</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#0D0106</Color>
    <Color x:Key="TextPrimaryDark">#F5F5F8</Color>      <!-- off-white -->
    <Color x:Key="TextSecondaryLight">#6276A9</Color>
    <Color x:Key="TextSecondaryDark">#9AADF6</Color>

    <!-- Semantic grayscale used in styles -->
    <Color x:Key="Gray100">#F5F5F8</Color>
    <Color x:Key="Gray200">#E0E3EA</Color>
    <Color x:Key="Gray300">#C9CEDA</Color>
    <Color x:Key="Gray400">#9AA3B5</Color>
    <Color x:Key="Gray500">#6276A9</Color>
    <Color x:Key="Gray600">#4A5568</Color>
    <Color x:Key="Gray700">#2A2430</Color>
    <Color x:Key="Gray900">#141018</Color>
    <Color x:Key="Gray950">#0D0106</Color>

    <!-- Backward compatible -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="MidnightBlue">#2767E9</Color>
    <Color x:Key="Magenta">#EF6A3F</Color>
    <Color x:Key="Danger">#E53935</Color>

    <!-- Legacy aliases -->
    <Color x:Key="Primary">#2767E9</Color>
    <Color x:Key="PrimaryDark">#141018</Color>
    <Color x:Key="PrimaryDarkText">#0D0106</Color>
    <Color x:Key="Secondary">#9AADF6</Color>
    <Color x:Key="SecondaryDarkText">#F5F5F8</Color>

    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimary}" />
    <SolidColorBrush x:Key="BrandAccentBrush" Color="{StaticResource BrandAccent}" />
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackground}" />
</ResourceDictionary>
